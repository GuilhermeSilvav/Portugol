programa
{

	cadeia informarDados [999]
	inteiro contador = 0
	inteiro opcao = 0
	
	funcao inicio()
	{
		faca{
				
			escreva("\nEscolha uma das opções: \n\n(1) Inserir\n(2) Exibir\n(3) Encerrar ")
			leia(opcao)
			inserir()
			exibir()
			
			}enquanto((opcao == 1) ou (opcao == 2))
	}
	
	funcao inserir()
	{
		se (opcao == 1){
		caracter resposta

			faca{
				escreva("Informe os dados: ")
				leia(informarDados[contador])

				contador ++
			
				escreva("Os dados estão corretos? ")
				leia(resposta)
			
			}enquanto(resposta == 'n')
				
			}
	}
	funcao exibir()
	{
		se (opcao == 2){

			para(inteiro i = 0; i < contador; i++)
				escreva("\nProduto " + informarDados[i] + ":")
		}
	}
}
	

